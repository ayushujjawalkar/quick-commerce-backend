{
  "info": {
    "name": "Quick Commerce API",
    "description": "Complete API collection for Quick Commerce Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api"
    },
    {
      "key": "firebase_token",
      "value": "YOUR_FIREBASE_ID_TOKEN"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{base_url}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firebaseUid\": \"test-uid-123\",\n  \"email\": \"test@example.com\",\n  \"name\": \"Test User\",\n  \"phone\": \"9876543210\"\n}"
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              }
            ],
            "url": "{{base_url}}/auth/me"
          }
        },
        {
          "name": "Add Address",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{base_url}}/auth/addresses",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"home\",\n  \"addressLine1\": \"123 Main Street\",\n  \"city\": \"Mumbai\",\n  \"state\": \"Maharashtra\",\n  \"pincode\": \"400001\",\n  \"latitude\": 19.0760,\n  \"longitude\": 72.8777,\n  \"isDefault\": true\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Shops",
      "item": [
        {
          "name": "Get Nearby Shops",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/shops/nearby?latitude=19.0760&longitude=72.8777&maxDistance=10"
          }
        },
        {
          "name": "Create Shop",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{base_url}}/shops",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"QuickMart Downtown\",\n  \"description\": \"Your neighborhood grocery store\",\n  \"addressLine1\": \"456 Market Road\",\n  \"city\": \"Mumbai\",\n  \"state\": \"Maharashtra\",\n  \"pincode\": \"400001\",\n  \"latitude\": 19.0760,\n  \"longitude\": 72.8777,\n  \"contactNumber\": \"9876543210\",\n  \"email\": \"shop@example.com\",\n  \"categories\": [\"grocery\", \"food\"],\n  \"deliveryRadius\": 5,\n  \"minimumOrderAmount\": 100,\n  \"deliveryFee\": 30\n}"
            }
          }
        },
        {
          "name": "Get Shop Details",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/shops/:shopId"
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/products?page=1&limit=20"
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{base_url}}/products",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"shopId\": \"SHOP_ID_HERE\",\n  \"name\": \"Fresh Milk\",\n  \"description\": \"Pure cow milk\",\n  \"category\": \"dairy\",\n  \"brand\": \"Amul\",\n  \"price\": 60,\n  \"stock\": 100,\n  \"unit\": \"l\",\n  \"unitValue\": 1\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              }
            ],
            "url": "{{base_url}}/cart"
          }
        },
        {
          "name": "Add to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{base_url}}/cart/items",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"PRODUCT_ID_HERE\",\n  \"quantity\": 2\n}"
            }
          }
        },
        {
          "name": "Apply Coupon",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{base_url}}/cart/coupon",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"couponCode\": \"SAVE10\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{base_url}}/orders",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"shopId\": \"SHOP_ID_HERE\",\n  \"items\": [\n    {\n      \"productId\": \"PRODUCT_ID_1\",\n      \"quantity\": 2\n    }\n  ],\n  \"deliveryAddressId\": \"ADDRESS_ID_HERE\",\n  \"contactNumber\": \"9876543210\",\n  \"paymentMethod\": \"cod\"\n}"
            }
          }
        },
        {
          "name": "Get User Orders",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              }
            ],
            "url": "{{base_url}}/orders?page=1&limit=10"
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{base_url}}/orders/:orderId/status",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"confirmed\",\n  \"note\": \"Order confirmed\"\n}"
            }
          }
        }
      ]
    }
  ]
}
